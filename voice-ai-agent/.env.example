# Environment Configuration for Voice AI Agent

# ===========================================
# Twilio Configuration
# ===========================================
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
WEBHOOK_BASE_URL=https://your-domain.com

# ===========================================
# AI Services
# ===========================================

# Claude API (Primary)
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API (Fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Deepgram API (Optional STT fallback)
DEEPGRAM_API_KEY=your_deepgram_key_here

# ===========================================
# Database
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/voice_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# TTS Service (Your existing system)
# ===========================================
TTS_API_URL=http://localhost:5000
TTS_DEFAULT_VOICE=en-US-lessac-medium
TTS_DEFAULT_ENGINE=piper

# ===========================================
# Speech Recognition
# ===========================================
WHISPER_MODEL=base  # tiny, base, small, medium, large
WHISPER_DEVICE=cpu  # cpu or cuda
WHISPER_COMPUTE_TYPE=int8  # int8, float16, float32

# ===========================================
# Voice Activity Detection
# ===========================================
VAD_THRESHOLD=0.5  # 0-1, higher = more strict
VAD_MIN_SPEECH_MS=250
VAD_MAX_SILENCE_MS=500

# ===========================================
# LLM Configuration
# ===========================================
LLM_PROVIDER=anthropic  # anthropic or openai
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.7

# ===========================================
# Server Configuration
# ===========================================
PORT=8080
HOST=0.0.0.0
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# Analytics
# ===========================================
ENABLE_ANALYTICS=true
ANALYTICS_DB_URL=postgresql://user:password@localhost:5432/analytics

# Prometheus
PROMETHEUS_PORT=9090
ENABLE_PROMETHEUS=true

# Sentry (Error tracking)
SENTRY_DSN=

# ===========================================
# Security
# ===========================================
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# Storage
# ===========================================
RECORDING_STORAGE=s3  # s3, local, or gcs
S3_BUCKET=voice-ai-recordings
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

LOCAL_STORAGE_PATH=./recordings

# ===========================================
# Features
# ===========================================
ENABLE_CALL_RECORDING=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_FUNCTION_CALLING=true
ENABLE_VOICE_CLONING=false

# ===========================================
# Performance
# ===========================================
MAX_CONCURRENT_CALLS=100
AUDIO_BUFFER_SIZE=4096
STREAM_CHUNK_SIZE=320

# ===========================================
# Development
# ===========================================
MOCK_TWILIO=false
MOCK_LLM=false
SAVE_DEBUG_AUDIO=false
