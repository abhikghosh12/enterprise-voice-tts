{
  "name": "enterprise-voice-browser",
  "version": "2.0.0",
  "description": "AI-powered browser with Ollama integration and voice capabilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:win:portable": "electron-builder --win portable",
    "build:win:appx": "electron-builder --win appx",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build:win"
  },
  "build": {
    "appId": "com.enterprise.voicebrowser",
    "productName": "Enterprise Voice Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "styles.css",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png",
      "publisherName": "Enterprise Voice Team",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Enterprise Voice Browser",
      "installerIcon": "icon.png",
      "uninstallerIcon": "icon.png",
      "installerHeader": "icon.png",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png"
    },
    "appx": {
      "applicationId": "EnterpriseVoiceBrowser",
      "backgroundColor": "#ffffff",
      "displayName": "Enterprise Voice Browser",
      "identityName": "EnterpriseVoiceTeam.EnterpriseVoiceBrowser",
      "publisher": "CN=Enterprise Voice Team",
      "publisherDisplayName": "Enterprise Voice Team"
    }
  },
  "keywords": [
    "browser",
    "ai",
    "ollama",
    "voice",
    "tts",
    "stt"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
